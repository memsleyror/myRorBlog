

<h1>Create a New Comment</h1>


<%= form_for @comment do |f| %>
	<p>
		<%= f.label "Comment" %><br/>
		<%= f.text_area :user_comment %><br/>
		
		<%= f.label "Post" %><br/>
		<%= f.collection_select :post_id, Post.all, :id , :title %><br/>
		
		<%= f.hidden_field :user_id, :value => current_user.id %>
	</p>

	<p>
		<%= f.submit "Create" %>
	</p>


<% end %>