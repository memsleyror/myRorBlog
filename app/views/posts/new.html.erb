<h1>Create a New Posts</h1>


<%= form_for @post do |f| %>
	<p>
		<%= f.label :title %><br/>
		<%= f.text_field :title %><br/>
		
		<%= f.label :body %><br/>
		<%= f.text_area :body %><br/>
		
		<%= f.hidden_field :user_id, :value => current_user.id %>

		
	</p>

	<p>
		<%= f.submit "Create" %>
	</p>


<% end %>
