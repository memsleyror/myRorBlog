<h1>Edit Post</h1>


<%= form_for @post do |f| %>
	<p>
		<%= f.label :title %><br/>
		<%= f.text_field :title %><br/>
		
		<%= f.label :body %><br/>
		<%= f.text_area :body %><br/>
		
		<%= f.label "User" %><br/>
		<%= f.collection_select :user_id, User.all, :id , :last_name %>
	</p>

	<p>
		<%= f.submit "Update" %>
	</p>


<% end %>