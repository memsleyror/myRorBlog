
<h1>Show User</h1>
<h1><%= @user.last_name %></h1>
<h2><%= @user.id %></h2>
<h2><%= @user.role.role_name %></h2>

<div class="picture">
	<%= image_tag @user.profile_pic_url(:thumb).to_s %>
</div>


<h3>Posts</h3>
<div class="posts">
	<% @user.posts.each do |post| %>
		<div class "movie">
			<span><%= link_to post.title, post %></span>
			(<%= post.body %>)
		</div>
	<% end %>
</div>
