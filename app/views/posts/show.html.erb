


	<p>
		<h1><%= @post.title %></h1><br/>
		<%= @post.body %>
	</p>






<h3>Comments</h3>
<input type="button" id="button" value="Show/Hide Comments" />

<table class = "showhide" style="display: none">

	<% @post.comments.each do |comment| %>
	  <% next if comment.new_record? %>
		<tr>
		<div class "comment">
			<td><%= comment.user_comment %></td>
			<td>(<%= comment.user.last_name %>)</td>
			<!--<td><%#= link_to 'Show', comment %></td>-->
			<% if comment.user_id == current_user.id %>
				<td><%= link_to 'Edit', edit_post_comment_path(@post,comment) %></td>
				<td><%= link_to 'Destroy', [@post, comment], :confirm => 'Are you sure?', :method => :delete %></td>
			<% end %>
		</div>
		</tr>
	<% end %>

</table><br><br>


<%= form_for([@post, @new_comment]) do |f| %>

  		<%= f.text_area :user_comment %></br>
		<%= f.submit "Save Comment" %>

<% end %>

