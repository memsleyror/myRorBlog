<h1>Edit Post</h1>


<%= form_for @post do |f| %>
	<p>
		<%= f.label :title %><br/>
		<%= f.text_field :title %><br/>
		
		<%= f.label :body %><br/>
		<%= f.text_area :body %><br/>
		
		<%= f.label "User" %><br/>
		<%= f.collection_select :user_id, User.all, :id , :last_name %>
	</p>

	<%= f.fields_for :comments do |builder| %>
		<fieldset>
			<%= builder.label :user_comment, "Comment" %><br/>
			<%= builder.text_area :user_comment %>
		</fieldset>
	<% end %>

	<p>
		<%= f.submit "Update" %>
	</p>


<% end %>